<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_dark</item>
        <!--<item name="android:colorButtonNormal">@color/primary_darker</item>-->
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>


    <!-- Base Navigation-->
    <style name="AppTheme.Base"/>

    <style name="AppTheme.Base.Navigation"></style>

    <style name="AppTheme.Base.Navigation.Toolbar">
        <item name="android:layout_height">@dimen/base_navigation_toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/base_navigation_toolbar_minHeight</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="AppTheme.Base.Navigation.Toolbar.Transparent">
        <item name="android:background">@color/base_navigation_toolbar_transparent_background</item>
    </style>

    <style name="AppTheme.Base.Navigation.Drawer"/>

    <style name="AppTheme.Base.Navigation.Drawer.Content">
        <item name="android:layout_width">@dimen/base_navigation_drawer_content_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@color/base_navigation_drawer_content_background</item>
    </style>

    <!-- Base Loading-->
    <style name="AppTheme.Base.Loading"/>

    <style name="AppTheme.Base.Loading.Container">
        <item name="android:background">@color/base_loading_container_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.Base.Loading.Progress">
        <item name="android:layout_width">@dimen/base_loading_progress_size</item>
        <item name="android:layout_height">@dimen/base_loading_progress_size</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="AppTheme.Grid">
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">@dimen/grid_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:columnWidth">@dimen/grid_item_width</item>
        <item name="android:stretchMode">spacingWidthUniform</item>
        <item name="android:paddingTop">@dimen/grid_padding</item>
        <item name="android:paddingBottom">@dimen/grid_padding</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!--drawer: favorites-->
    <style name="AppTheme.Menu"/>

    <style name="AppTheme.Menu.Title">
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/default_spacing_large</item>
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
        <item name="android:text">Menu</item>
    </style>

    <style name="AppTheme.Menu.List">
        <item name="android:background">@color/default_background_second</item>
    </style>

    <style name="AppTheme.Menu.List.ItemText">
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/default_spacing_medium</item>
        <item name="android:textColor">@color/default_textColor_fifth</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
        <item name="android:layout_toRightOf">@id/menu_icon</item>
        <item name="android:layout_alignTop">@+id/menu_icon</item>
    </style>
</resources>
